# GridGhost Racing Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=development
PORT=4000

# ================================
# DATABASE CONFIGURATION
# ================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/gridghost_db"

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# WebSocket Configuration
WS_PORT=3001

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Google Services
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
GOOGLE_PLACES_API_KEY="your-google-places-api-key"

# Azure Configuration (for production deployment)
AZURE_STORAGE_CONNECTION_STRING="your-azure-storage-connection-string"
AZURE_KEY_VAULT_URL="https://your-keyvault.vault.azure.net/"

# Redis Configuration (for session storage and caching)
REDIS_URL="redis://localhost:6379"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Push Notifications
EXPO_ACCESS_TOKEN="your-expo-access-token"

# API Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR="./uploads"

# External APIs
EDMUNDS_API_KEY="your-edmunds-api-key"
WEATHER_API_KEY="your-weather-api-key"

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-in-production"

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# ================================
# AUTHENTICATION & SECURITY
# ================================
# JWT secret key (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-here-change-this-in-production
# JWT expiration time
JWT_EXPIRES_IN=7d

# ================================
# EXTERNAL API KEYS
# ================================
# Google Maps API key for location services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Azure Maps API key (optional, for additional mapping features)
AZURE_MAPS_API_KEY=your-azure-maps-api-key-here

# Edmunds API key for vehicle data
EDMUNDS_API_KEY=your-edmunds-api-key-here

# ================================
# AZURE STORAGE (Production)
# ================================
# Azure Storage connection string for file uploads
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Azure Storage container name for uploads
AZURE_STORAGE_CONTAINER=gridghost-uploads

# ================================
# CORS & NETWORKING
# ================================
# Allowed origins for CORS (use * for development, specific URLs for production)
CORS_ORIGIN=http://localhost:8082,http://localhost:3000

# WebSocket port for real-time features
WEBSOCKET_PORT=8080

# ================================
# MONITORING & LOGGING
# ================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Application Insights connection string (Azure)
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# ================================
# MOBILE APP CONFIGURATION
# ================================
# Backend API URL (for mobile app)
EXPO_PUBLIC_API_URL=http://localhost:4000

# Google Maps API key for mobile app (can be same as backend)
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Azure Maps API key for mobile app
EXPO_PUBLIC_AZURE_MAPS_API_KEY=your-azure-maps-api-key-here

# ================================
# FEATURE FLAGS
# ================================
# Enable premium features
ENABLE_PREMIUM_FEATURES=true

# Enable real-time racing
ENABLE_REALTIME_RACING=true

# Enable AI coaching features
ENABLE_AI_COACHING=false

# ================================
# PRODUCTION OVERRIDES
# ================================
# These will be set automatically by Azure deployment
# AZURE_DATABASE_URL=
# AZURE_KEY_VAULT_URL=
# AZURE_STORAGE_ACCOUNT_URL=
