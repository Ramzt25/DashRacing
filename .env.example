# GridGhost Racing Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=development
PORT=4000

# ================================
# DATABASE CONFIGURATION
# ================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://gridghost:password@localhost:5432/gridghost

# ================================
# AUTHENTICATION & SECURITY
# ================================
# JWT secret key (generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-here-change-this-in-production
# JWT expiration time
JWT_EXPIRES_IN=7d

# ================================
# EXTERNAL API KEYS
# ================================
# Google Maps API key for location services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Azure Maps API key (optional, for additional mapping features)
AZURE_MAPS_API_KEY=your-azure-maps-api-key-here

# Edmunds API key for vehicle data
EDMUNDS_API_KEY=your-edmunds-api-key-here

# ================================
# AZURE STORAGE (Production)
# ================================
# Azure Storage connection string for file uploads
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Azure Storage container name for uploads
AZURE_STORAGE_CONTAINER=gridghost-uploads

# ================================
# CORS & NETWORKING
# ================================
# Allowed origins for CORS (use * for development, specific URLs for production)
CORS_ORIGIN=http://localhost:8082,http://localhost:3000

# WebSocket port for real-time features
WEBSOCKET_PORT=8080

# ================================
# MONITORING & LOGGING
# ================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Application Insights connection string (Azure)
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# ================================
# MOBILE APP CONFIGURATION
# ================================
# Backend API URL (for mobile app)
EXPO_PUBLIC_API_URL=http://localhost:4000

# Google Maps API key for mobile app (can be same as backend)
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Azure Maps API key for mobile app
EXPO_PUBLIC_AZURE_MAPS_API_KEY=your-azure-maps-api-key-here

# ================================
# FEATURE FLAGS
# ================================
# Enable premium features
ENABLE_PREMIUM_FEATURES=true

# Enable real-time racing
ENABLE_REALTIME_RACING=true

# Enable AI coaching features
ENABLE_AI_COACHING=false

# ================================
# PRODUCTION OVERRIDES
# ================================
# These will be set automatically by Azure deployment
# AZURE_DATABASE_URL=
# AZURE_KEY_VAULT_URL=
# AZURE_STORAGE_ACCOUNT_URL=
