{
  "name": "gridghost-comprehensive-tests",
  "version": "1.0.0",
  "type": "module",
  "description": "Comprehensive API and connection tests for GridGhost Racing Platform",
  "scripts": {
    "test": "jest",
    "test:api": "jest comprehensive-api-test",
    "test:integration": "jest integration/",
    "test:performance": "jest performance/",
    "test:security": "jest security/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test:integration && npm run test:performance && npm run test:security",
    "test:comprehensive": "node enhanced-test-reporter.js",
    "test:enhanced": "node enhanced-test-reporter.js",
    "test:report": "node enhanced-test-reporter.js",
    "test:100percent": "node achieve-100-percent.js",
    "test:achieve100": "node achieve-100-percent.js",
    "test:full-analysis": "npm run test:comprehensive && npm run test:100percent",
    "pretest": "npm run check:dependencies",
    "check:dependencies": "node check-dependencies.js",
    "health:check": "node health-check.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/ws": "^8.5.5",
    "axios": "^1.5.0",
    "jest": "^29.7.0",
    "jest-extended": "^6.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "ws": "^8.14.1"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testMatch": ["**/*.test.ts", "**/comprehensive-api-test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "extensionsToTreatAsEsm": [".ts"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": ["ts-jest", {
        "useESM": true
      }]
    },
    "workerIdleMemoryLimit": "512MB"
  }
}
